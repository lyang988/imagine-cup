<!DOCTYPE html>
<html>
   <head>
       <link rel="stylesheet" type="text/css" href="/stylesheets/ahhhhh.css">
       <link rel="stylesheet" type="text/css" href="/stylesheets/homepage.css">
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
       integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
       <link rel="stylesheet" href="/stylesheets/prism.css">
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
   </head>
   <body>
       <header>
           <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top" style="height: 60px">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Anadromy</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      {{lang1}}
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="#">a</a></li>
                      <li><a class="dropdown-item" href="#">b</a></li>
                      <li><a class="dropdown-item" href="#">c</a></li>
                    </ul>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      {{lang2}}
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="#">a</a></li>
                      <li><a class="dropdown-item" href="#">b</a></li>
                      <li><a class="dropdown-item" href="#">c</a></li>
                    </ul>
                  </li>
                </ul>
                <a href="/auth/logout" class="btn btn-outline-success  ml-auto">logout</a>
              </div>
            </div>
          </nav>
        </header>
        <div class="mainpage">
        <table class="table table-hover" style="padding: 20px;">
            {{#each this.info}}
                <thead>
                <tr>
                    <th>Unit {{this.unitnumber}}</th>
                    <th scope="col"></th>
                    <th scope="col">Unit Review</th>
                </tr>
                </thead>
                <tbody>
                    {{#each this.unitlessons}}
                        <tr>
                            <td>{{this.num}}</td>
                            <td class = "lesson" id="{{this.num}}">{{this.lesson}}</td>
                            {{#if this.completed}}
                                <td>completed</td>
                            {{else}}
                                <td>not completed</td>
                            {{/if}}
                        </tr>
                    {{/each}}
                </tbody>
            {{/each}}
        </table>
    </div>
    <script type="text/javascript">
        const lang1 = "{{lang1}}"
        const lang2 = "{{lang2}}"
    </script>
    <script src="/scripts/prism.js"></script>
    <script src="/scripts/homepage.js"></script>
   </body>
</html>
