<!DOCTYPE html>
<html>
   <head>
       <link rel="stylesheet" type="text/css" href="/stylesheets/ahhhhh.css">
       <link rel="stylesheet" type="text/css" href="/stylesheets/homepage.css">
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
       integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
       <link rel="stylesheet" href="/stylesheets/prism.css">
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
   </head>
   <body>
       <header>
          {{> header }} 
        </header>
        <div class="mainpage">
        <table class="table table-hover" style="padding: 20px;">
            {{#each this.info}}
                <thead>
                <tr>
                    <th>Unit {{this.unitnumber}}</th>
                    <th scope="col"></th>
                    <th scope="col">Unit Review</th>
                </tr>
                </thead>
                <tbody>
                    {{#each this.unitlessons}}
                        <tr>
                            <td>{{this.num}}</td>
                            <td class = "lesson" id="{{this.num}}">{{this.lesson}}</td>
                            {{#if this.completed}}
                                <td>completed</td>
                            {{else}}
                                <td>not completed</td>
                            {{/if}}
                        </tr>
                    {{/each}}
                </tbody>
            {{/each}}
        </table>
    </div>
    <script type="text/javascript">
        const lang1 = "{{lang1}}"
        const lang2 = "{{lang2}}"
    </script>
    <script src="/scripts/prism.js"></script>
    <script src="/scripts/homepage.js"></script>
   </body>
</html>
