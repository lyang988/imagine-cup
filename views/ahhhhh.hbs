<!DOCTYPE html>
<html>
   <head>
       <link rel="stylesheet" type="text/css" href="/stylesheets/ahhhhh.css">
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
       integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   </head>
   <body>
       <header>
           <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top" style="background-color: #D3F2FF; height: 60px">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Anadromy</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      {{lang1}}
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="#">a</a></li>
                      <li><a class="dropdown-item" href="#">b</a></li>
                      <li><a class="dropdown-item" href="#">c</a></li>
                    </ul>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      {{lang2}}
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="#">a</a></li>
                      <li><a class="dropdown-item" href="#">b</a></li>
                      <li><a class="dropdown-item" href="#">c</a></li>
                    </ul>
                  </li>
                </ul>
                <a href="/auth/logout" class="btn btn-outline-success  ml-auto">logout</a>
              </div>
            </div>
          </nav>
          <h1>Unit {{unitnumber}}: {{lessonname}}</h1>
        </header>
        <div class="mainpage">
        {{#each arr}}
           {{#if this.istable}}
           <table class="table table-hover" style="padding: 20px;">
<thead>
 <tr>
   {{#each this.array.[0]}}
     <th>{{@key}}</th>
   {{/each}}
 </tr>
</thead>
<tbody>
 {{#each this.array}}
   <tr>
       {{#each this}}
       <td>{{this}}</td>
     {{/each}}
   </tr>
 {{/each}}
</tbody>
</table>
           {{else}}
           {{#if iscode}}
           <pre><div class = {{this.type}}>{{this.text}}</div></pre>
           {{else}}
           <div class = {{this.type}}>{{this.text}}</div>
           {{/if}}
           {{/if}}
       {{/each}}
    </div>
   </body>
</html>
 

